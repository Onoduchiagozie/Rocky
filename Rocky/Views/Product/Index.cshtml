@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Rocky.Models.Product>

@{
    ViewBag.Title = "Category";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4 ">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="text-white btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;
                Create New Products
            </a>
        </div>
    </div>
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Application Type
                </th>
                <th>
                Category
                </th>
                                                
        <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%" >@obj.Name</td>
                    <td width="30%" >@obj.Price</td>
                    <td width="30%" >@obj.ApplicationType.Name</td>
                    <td width="30%" >@obj.Category.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" 
                               asp-route-id="@obj.Id" asp-action="Upsert"
                               class="btn btn-primary mx-2" > <i class="fas fa-edit"></i>
                                &nbsp;</a>
                            <a asp-controller="Product" asp-route-id="@obj.Id"
                               asp-action="Delete" class="btn btn-danger mx-2"><i class="far fa-trash-alt "></i> &nbsp;</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h3>No Products Exists Yet</h3>
    }
</div>